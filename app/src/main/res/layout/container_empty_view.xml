<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/medium_space"
              android:gravity="center">

    <ImageView
            android:id="@+id/imageViewEmptyView"
            android:layout_width="@dimen/image_space"
            android:src="@drawable/ic_dog"
            android:layout_height="@dimen/image_space" />

    <TextView
            android:id="@+id/textViewEmptyView"
            style="@style/TextView.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/medium_space"
            android:text="@string/msg_my_heroes_empty"/>

</LinearLayout>